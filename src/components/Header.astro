---
import ChristmasLights from "@components/ChristmasLights.astro";

// Check if it's Christmas season (must match ChristmasLights.astro logic)
const now = new Date();
const month = now.getMonth();
const day = now.getDate();
const isChristmasSeason =
  (month === 10 && day >= 27) || // Nov 27+
  (month === 11) ||              // All of December
  (month === 0 && day === 1);    // Jan 1
---

<header class={`relative px-6 w-full top-0 z-50 ${isChristmasSeason ? 'pt-6' : ''}`}>
  <div class="flex space-x-4 justify-between items-center">
    <a href="/" class="logo">
      <img
        src="/spook_horizontal_white.svg"
        alt="Spook Software Logo"
        width="205px"
        class="transition-opacity duration-300 hover:opacity-80"
      />
    </a>
    <nav class="flex flex-row gap-8 text-xl">
      <a href="/products">
        <p>Products</p>
      </a>
      <a href="/about">
        <p>About</p>
      </a>
    </nav>
  </div>
  <ChristmasLights position="top" />
</header>

<style>
  .border-gradient {
    border-image-source: linear-gradient(to right, white, #c65842);
    border-image-slice: 1;
  }

/* to prevent CLS */
  img {
    aspect-ratio: 436.39 / 166.44;
  }
</style>
