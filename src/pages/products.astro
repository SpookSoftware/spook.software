---
import "@styles/base.css";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout
  title="Products | Spook Software"
  description="Software products built by Spook Software"
>
  <div class="products-container w-full max-w-5xl mx-auto px-4 py-12">
    <h1 class="text-center mb-12">Products</h1>

    <div class="products-grid">
      <a href="https://apps.shopify.com/fluxley-ai-price-negotiation" class="product-card group" rel="external">
        <span class="product-tag">Shopify App</span>
        <div class="card-content">
          <h2 class="product-name">Fluxley</h2>
          <p class="product-description">
            AI-powered price negotiation for Shopify stores. Let customers negotiate
            personalized discounts in real-time while protecting your profit margins.
          </p>
          <span class="product-link">
            View on Shopify
            <svg class="arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </span>
        </div>
      </a>
    </div>
  </div>

  <style>
    .products-container h1 {
      font-size: var(--step-4);
      background: linear-gradient(135deg, #FFFFFF 0%, #FF931E 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .products-grid {
      display: grid;
      grid-template-columns: repeat(1, 1fr);
      gap: 2rem;
      justify-items: center;
    }

    @media (min-width: 768px) {
      .products-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (min-width: 1024px) {
      .products-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    .product-card {
      position: relative;
      display: flex;
      flex-direction: column;
      width: 100%;
      max-width: 360px;
      min-height: 280px;
      padding: 2rem;
      background: rgba(0, 0, 0, 0.35);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 1rem;
      text-decoration: none;
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .product-card::before {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: 1rem;
      padding: 1px;
      background: linear-gradient(
        135deg,
        rgba(255, 147, 30, 0) 0%,
        rgba(255, 147, 30, 0) 100%
      );
      -webkit-mask:
        linear-gradient(#fff 0 0) content-box,
        linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      pointer-events: none;
      transition: background 0.4s ease;
    }

    .product-card:hover::before {
      background: linear-gradient(
        135deg,
        rgba(255, 147, 30, 0.8) 0%,
        rgba(142, 46, 80, 0.8) 100%
      );
    }

    .product-card:hover {
      transform: translateY(-4px);
      background: rgba(0, 0, 0, 0.45);
      border-color: rgba(255, 147, 30, 0.2);
      box-shadow:
        0 20px 40px rgba(0, 0, 0, 0.4),
        0 0 60px rgba(255, 147, 30, 0.08);
    }

    .product-tag {
      position: absolute;
      top: 1.25rem;
      right: 1.25rem;
      padding: 0.35rem 0.75rem;
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: #FF931E;
      background: rgba(255, 147, 30, 0.12);
      border: 1px solid rgba(255, 147, 30, 0.25);
      border-radius: 2rem;
    }

    .card-content {
      display: flex;
      flex-direction: column;
      flex: 1;
      margin-top: 1.5rem;
    }

    .product-name {
      font-size: var(--step-2);
      margin-bottom: 1rem;
      color: #FFFFFF;
      transition: color 0.3s ease;
    }

    .product-card:hover .product-name {
      color: #FF931E;
    }

    .product-card:visited .product-name {
      color: #FF931E;
    }

    .product-description {
      font-size: var(--step--1);
      line-height: 1.7;
      color: rgba(255, 255, 255, 0.7);
      flex: 1;
    }

    .product-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      margin-top: 1.5rem;
      font-size: var(--step--1);
      font-weight: 500;
      color: #FF931E;
      text-decoration: none;
    }

    .product-link .arrow {
      transition: transform 0.3s ease;
    }

    .product-card:hover .product-link .arrow {
      transform: translateX(4px);
    }
  </style>
</BaseLayout>
