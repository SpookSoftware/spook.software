---
import "@styles/base.css";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout
  title="Products | Spook Software"
  description="Software products built by Spook Software"
>
  <div class="products-container">
    <h1 class="page-title">Products</h1>

    <div class="products-grid">
      <a href="https://apps.shopify.com/fluxley" class="product-card" rel="external">
        <span class="product-tag">Shopify App</span>
        <h2 class="product-name">Fluxley</h2>
        <p class="product-description">
          AI-powered price negotiation for Shopify stores. Let customers negotiate
          personalized discounts in real-time while protecting your profit margins.
        </p>
        <span class="product-link">
          View on Shopify
          <svg class="arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
      </a>

      <a href="https://chromewebstore.google.com/detail/flick-extension-manager-s/dlbcjjnoofeaabneaockenopgcohinih" class="product-card" rel="external">
        <span class="product-tag">Chrome Extension</span>
        <h2 class="product-name">Flick</h2>
        <p class="product-description">
          Toggle any Chrome extension in one click. Search, sort, star favorites,
          disable all at once. Pro adds keyboard shortcuts, profiles, and
          always-enabled protection.
        </p>
        <span class="product-link">
          View on Chrome Web Store
          <svg class="arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
      </a>
    </div>
  </div>

  <style>
    .products-container {
      width: 100%;
      max-width: 64rem;
      margin: 0 auto;
      padding: 3rem 1.5rem;
      position: relative;
      z-index: 2;
    }

    .page-title {
      text-align: center;
      font-size: var(--step-4);
      margin-bottom: 3rem;
    }

    .products-grid {
      display: grid;
      grid-template-columns: repeat(1, 1fr);
      gap: 2rem;
      justify-items: center;
    }

    @media (min-width: 768px) {
      .products-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (min-width: 1024px) {
      .products-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    .product-card {
      position: relative;
      display: flex;
      flex-direction: column;
      width: 100%;
      max-width: 400px;
      min-height: 280px;
      padding: 2rem;
      background: rgba(10, 2, 10, 0.7);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 2px;
      text-decoration: none;
      overflow: hidden;
      transition: all 0.25s ease;
    }

    /* Corner accents with neon glow */
    .product-card::before,
    .product-card::after {
      content: "";
      position: absolute;
      width: 32px;
      height: 32px;
      border-color: var(--color-ember);
      border-style: solid;
      box-shadow: 0 0 6px rgba(198, 88, 66, 0.25);
      transition: all 0.25s ease;
    }

    .product-card::before {
      top: -1px;
      left: -1px;
      border-width: 1px 0 0 1px;
    }

    .product-card::after {
      bottom: -1px;
      right: -1px;
      border-width: 0 1px 1px 0;
    }

    .product-card:hover {
      background: rgba(10, 2, 10, 0.85);
      border-color: rgba(255, 255, 255, 0.15);
    }

    .product-card:hover::before,
    .product-card:hover::after {
      width: 40px;
      height: 40px;
      border-color: var(--color-flame);
      box-shadow:
        0 0 12px rgba(255, 147, 30, 0.5),
        0 0 24px rgba(255, 147, 30, 0.25);
    }

    .product-tag {
      display: inline-block;
      width: fit-content;
      padding: 0.25rem 0.5rem;
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.6rem;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: white;
      border: 1px solid rgba(255, 255, 255, 0.2);
      margin-bottom: 1.25rem;
    }

    .product-name {
      font-size: var(--step-2);
      margin-bottom: 1rem;
      color: var(--color-light);
      transition: color 0.2s ease;
    }

    .product-card:hover .product-name {
      color: var(--color-ember);
    }

    .product-description {
      font-size: var(--step--1);
      line-height: 1.75;
      color: white;
      flex: 1;
    }

    .product-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      margin-top: 1.5rem;
      font-family: 'JetBrains Mono', monospace;
      font-size: var(--step--2);
      font-weight: 500;
      color: var(--color-ember);
      text-decoration: none;
    }

    .product-link .arrow {
      transition: transform 0.2s ease;
    }

    .product-card:hover .product-link .arrow {
      transform: translateX(4px);
    }
  </style>
</BaseLayout>
