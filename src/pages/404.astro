---
import "@styles/base.css";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout
  title="404 | Spook Software"
  description="Page not found"
>
  <div class="not-found">
    <div class="ghost">
      <div class="ghost-figure">
        <div class="ghost-body">
          <div class="ghost-eyes">
            <div class="eye"></div>
            <div class="eye"></div>
          </div>
          <div class="ghost-mouth"></div>
        </div>
        <div class="ghost-tail">
          <div class="tail-piece"></div>
          <div class="tail-piece"></div>
          <div class="tail-piece"></div>
        </div>
      </div>
      <div class="ghost-shadow"></div>
    </div>

    <h1>404</h1>
    <p>There's nothing here.</p>
    <a href="/" class="home-link">Back to safety</a>
  </div>

  <style>
    .not-found {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 2rem;
      min-height: 60vh;
    }

    .ghost {
      position: relative;
      margin-bottom: 2rem;
    }

    .ghost-figure {
      animation: float 3s ease-in-out infinite;
    }

    .ghost-body {
      width: 120px;
      height: 140px;
      background: #FFFFFF;
      border-radius: 60px 60px 0 0;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .ghost-figure {
      filter: drop-shadow(0 0 40px rgba(255, 255, 255, 0.3));
    }

    .ghost-eyes {
      display: flex;
      gap: 20px;
      margin-top: -10px;
    }

    .eye {
      width: 14px;
      height: 18px;
      background: #140314;
      border-radius: 50%;
    }

    .ghost-mouth {
      width: 20px;
      height: 10px;
      border: 3px solid #140314;
      border-top: none;
      border-radius: 0 0 20px 20px;
      margin-top: 12px;
    }

    .ghost-tail {
      display: flex;
      position: relative;
      margin-top: -5px;
    }

    .tail-piece {
      width: 40px;
      height: 25px;
      background: #FFFFFF;
      border-radius: 0 0 50% 50%;
    }


    .ghost-shadow {
      width: 80px;
      height: 16px;
      background: rgba(0, 0, 0, 0.2);
      border-radius: 50%;
      position: absolute;
      bottom: -40px;
      left: 50%;
      transform: translateX(-50%);
      animation: shadow 3s ease-in-out infinite;
    }

    h1 {
      font-size: var(--step-5);
      color: #FF931E;
      margin: 0;
      letter-spacing: 0.1em;
    }

    p {
      font-size: var(--step-0);
      color: white;
      margin: 0.5rem 0 2rem;
    }

    .home-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.875rem 1.75rem;
      background: var(--color-ember);
      color: white;
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.875rem;
      font-weight: 500;
      border-radius: 6px;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .home-link:hover {
      background: var(--color-flame);
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(198, 88, 66, 0.3);
    }

    .home-link:visited {
      color: white;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-15px); }
    }

    @keyframes shadow {
      0%, 100% { transform: translateX(-50%) scale(1); opacity: 0.2; }
      50% { transform: translateX(-50%) scale(0.8); opacity: 0.1; }
    }

  </style>
</BaseLayout>
